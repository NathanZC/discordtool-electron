{
  "name": "discord-tool",
  "version": "1.1.1",
  "description": "A helper application for managing Discord accounts",
  "private": true,
  "author": "Nate",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "fs-extra": "^11.2.0"
  },
  "build": {
    "appId": "com.example.discordtool",
    "files": [
      "**/*",
      "src/**/*"
    ],
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "icon": "src/media/icon.png",
    "extraResources": [
      {
        "from": "node_modules/",
        "to": "node_modules/",
        "filter": [
          "electron-store/**/*"
        ]
      }
    ]
  },
  "dependencies": {
    "electron-dl": "^4.0.0",
    "electron-store": "^8.2.0"
  }
}
